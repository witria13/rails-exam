	<div class='row'>
	<div class='col-md-6 col-md-offset-3'>

			<div class="thread">
				<h4><%= @thread.title.titleize %></h4>

				<div class="meta">
					<%= I18n.l (@thread.created_at.to_date)%> oleh <%= @thread.user.name %>
				</div>

				<div class="content">
					<%= @thread.content %>	
				</div>

			</div>

		<% if @thread.forum_posts.any? %>
			<% @thread.forum_posts.each do |p| %>
				<div class="thread">

					<div class="meta">
						<%= I18n.l (p.created_at.to_date)%> oleh <%= p.user.name %>
					</div>

					<div class="content">
						<%= p.content %>	
					</div>
				</div>
			<% end %>
		<% else %>
			<div>Jadilah yang pertama memberi tanggapan.</div>
			<% end %>


		<% if @post.errors.any? %>
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">x</span></button>
				<% @post.errors.full_messages.each do |error| %>
				<span><%= error %></span></br>
				<% end %>
			</div>
		<% end %> 

		<% if user_signed_in? %>
		<%= form_for [@thread, @post] do |f| %>
			<div class="form-group">
				<%= f.label	:content%>
				<%= f.text_area :content, rows:10, class: 'form-control', placeholder: 'masukan tanggapan' %>
			</div>

			<div class="form-group">
				<%= f.submit "Buat", class: 'btn btn-primary form-control' %>
			</div>
		<% end %>
		<% end %>
	</div>
</div>